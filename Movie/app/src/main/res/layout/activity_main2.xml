<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ImageFragFActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/dp_50">

       <RadioGroup
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/group">

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/rbut_one"
               android:checked="true"
               android:buttonTint="#986FE0"
               android:layout_marginRight="@dimen/dp_10"/>
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/rbut_two"
               android:layout_marginRight="@dimen/dp_10"
               android:buttonTint="#F56093"/>
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/rbut_three"
               android:layout_marginRight="@dimen/dp_10"
               android:buttonTint="#41ECDC"/>
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/rbut_four"
               android:layout_marginRight="@dimen/dp_10"
               android:buttonTint="#161313"/>
       </RadioGroup>
   </LinearLayout>
</RelativeLayout>