<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_186"
                android:src="@mipmap/b" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <ImageView
                    android:id="@+id/img_editi"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/detai" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@id/img_editi"
                    android:text="北京"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <recycler.coverflow.RecyclerCoverFlow
                android:id="@+id/send_recy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_186"
                android:layout_marginTop="@dimen/dp_93"></recycler.coverflow.RecyclerCoverFlow>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:id="@+id/relay_hot">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:text="热门电影" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/nexts" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cyc_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:id="@+id/relay_replace">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:text="正在热映" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/nexts" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cyc_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:id="@+id/relay_comming">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:text="即将上映" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/nexts" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cyc_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>