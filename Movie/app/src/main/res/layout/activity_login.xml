<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LoginActivity"
    android:orientation="vertical"
    android:background="@mipmap/login">


    <!-- 张娜 登录 -->

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40">
        <ImageView
            android:id="@+id/i1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/log_icon_phone"
            />
        <com.xw.repo.XEditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@+id/i1"
            android:layout_marginLeft="@dimen/dp_20"
            android:hint="手机号"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <View
        android:id="@+id/l1"
        android:layout_below="@+id/r1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="#ffffff">
    </View>


    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_below="@+id/l1"
        android:layout_marginRight="@dimen/dp_40">
        <ImageView
            android:id="@+id/i2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/log_icon_lock"
            />
        <com.xw.repo.XEditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@+id/i2"
            android:layout_marginLeft="@dimen/dp_20"
            android:hint="登录密码"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/log_icon_eye"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/l2"
        android:layout_below="@+id/r2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="#ffffff">
    </View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_30">
        <CheckBox
            android:id="@+id/rmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"
            />
        <CheckBox
            android:id="@+id/zd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:layout_toRightOf="@+id/rmm"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/kszc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="快速注册"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/l2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_130"
        android:text="登录"
        android:textColor="#ffffff"
        android:background="@drawable/login_style"
        />

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_below="@+id/login"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <View
            android:layout_width="90dp"
            android:background="#ffffff"
            android:layout_gravity="center_vertical"
            android:layout_height="2dp"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方账号快速登录"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <View
            android:layout_width="90dp"
            android:background="#ffffff"
            android:layout_gravity="center_vertical"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/dp_5"></View>
    </LinearLayout>

    <ImageView
        android:id="@+id/wenxin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/l3"
        android:layout_marginTop="30dp"
        android:background="@mipmap/log_icon_weixin"
        />














</RelativeLayout>