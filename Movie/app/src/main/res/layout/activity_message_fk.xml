<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wdactivity.MessageFkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        android:text="意见反馈"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/lin1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/se_lin2"
        android:padding="@dimen/dp_20">

        <EditText
            android:id="@+id/ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="写下您对产品的感受吧！工作人员将会在第一时间评估处理"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_25"
        >
        <Button
            android:id="@+id/tj"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_25"
            android:text="提交"
            android:layout_alignParentRight="true"
            android:background="@drawable/tj_style"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12"
            />
    </RelativeLayout>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/lin2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_140"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fkqr"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈成功"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:text="感谢您对维度影院的关注与支持，我们会认真处理您的反"
            android:layout_marginTop="@dimen/dp_30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:text="馈,尽快修复和完善相关功能"
            />
    </LinearLayout>













    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/com_icon_my_default_back"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_25"
        />




</RelativeLayout>